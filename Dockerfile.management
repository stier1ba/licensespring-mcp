FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src/ ./src/

# Build the application
RUN npm run build

# Make the binary executable
RUN chmod +x dist/*.js

# Set the entrypoint
ENTRYPOINT ["node", "dist/management-api-server.js"]
